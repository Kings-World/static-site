---
import { FileQuestion, Home } from "lucide-react";
import { buttonVariants } from "~/components/ui/button";
import { Card, CardHeader, CardTitle, CardContent, CardFooter } from "~/components/ui/card";
import PageLayout from "~/layouts/PageLayout.astro";
import { cn } from "~/lib/utils";
import { Discord } from "simple-icons-astro";
import { links } from "~/lib/constants";
---

<PageLayout title="404" description="Page not found">
    <div class="absolute inset-0 flex flex-1 items-center justify-center p-8">
        <Card className="w-full max-w-md">
            <CardHeader className="text-center">
                <div class="mb-4 flex w-full justify-center">
                    <FileQuestion className="h-24 w-24 text-muted-foreground" />
                </div>
                <CardTitle className="mb-2 text-4xl font-bold">
                    404
                </CardTitle>
                <p class="text-xl font-semibold text-muted-foreground">
                    Page Not Found
                </p>
            </CardHeader>
            <CardContent>
                <p class="text-center text-muted-foreground">
                    Oops! It seems you&apos;ve ventured into uncharted
                    territory. Don&apos;t worry, even the best explorers get
                    lost sometimes.
                </p>
            </CardContent>
            <CardFooter className="flex justify-center gap-4">
                <a href="/" class={cn(buttonVariants({ variant: "outline" }), "flex items-center gap-2")}>
                    <Home className="size-4" />
                    <span>Home</span>
                </a>
                <a href={links.discord} class={cn(buttonVariants({ variant: "outline" }), "flex items-center gap-2")}>
                    <Discord className="size-4" />
                    <span>Discord</span>
                </a>
            </CardFooter>
        </Card>
    </div>
</PageLayout>
