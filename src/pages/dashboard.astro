---
import { Clock, Home, Bell } from "lucide-react";
import { buttonVariants } from "~/components/ui/button";
import {
    Card,
    CardHeader,
    CardTitle,
    CardContent,
    CardFooter,
} from "~/components/ui/card";
import PageLayout from "~/layouts/PageLayout.astro";
import { cn } from "~/lib/utils";
import { links } from "~/lib/constants";
---

<PageLayout
    title="Dashboard Under Construction"
    description="Our dashboard is currently under development. We're working hard to bring you powerful tools to manage your Discord server experience. Check back soon!"
>
    <div class="container flex flex-1 items-center justify-center py-8">
        <Card className="w-full max-w-md">
            <CardHeader className="text-center">
                <div class="mb-4 flex w-full justify-center">
                    <Clock className="text-muted-foreground h-24 w-24" />
                </div>
                <CardTitle className="mb-2 text-4xl font-bold"
                    >Coming Soon</CardTitle
                >
                <p class="text-muted-foreground text-xl font-semibold">
                    Dashboard Under Construction
                </p>
            </CardHeader>
            <CardContent>
                <p class="text-muted-foreground text-center">
                    Our dashboard is currently under development. We're working
                    hard to bring you powerful tools to manage your Discord
                    server experience. Check back soon!
                </p>
            </CardContent>
            <CardFooter className="flex justify-center gap-4">
                <a
                    href="/"
                    class={cn(
                        buttonVariants({ variant: "outline" }),
                        "flex items-center gap-2",
                    )}
                >
                    <Home className="size-4" />
                    <span>Home</span>
                </a>
                <a
                    href={links.discord}
                    target="_blank"
                    rel="noreferrer"
                    class={cn(
                        buttonVariants({ variant: "default" }),
                        "flex items-center gap-2",
                    )}
                >
                    <Bell className="size-4" />
                    <span>Get Notified</span>
                </a>
            </CardFooter>
        </Card>
    </div>
</PageLayout>
