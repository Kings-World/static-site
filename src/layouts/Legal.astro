---
import type { MarkdownLayoutProps } from "astro";
import PageLayout from "./PageLayout.astro";

type Props = MarkdownLayoutProps<{ title: string; description: string }>;

const { frontmatter } = Astro.props;
---

<PageLayout title={frontmatter.title} description={frontmatter.description}>
    <article
        class="prose dark:prose-invert prose-zinc prose-h1:text-[2em] sm:prose-h1:text-[2.25em] container py-8"
    >
        <slot />
    </article>
</PageLayout>
