---
import "~/styles/globals.css";

import { ClientRouter } from "astro:transitions";
import { siteConfig } from "~/lib/constants";
import {
    createOrganizationSchema,
    createWebPageSchema,
    type Schema,
} from "~/lib/schema";

export interface Props {
    title?: string;
    description?: string;
    schemas?: Schema[];
}

const { title, description, schemas } = Astro.props;

const logoURL = new URL("/logo.png", Astro.url);

const parsedTitle = title ? `${title} | ${siteConfig.name}` : siteConfig.title;
const parsedDescription = description ?? siteConfig.description;

const organizationSchema = createOrganizationSchema();
const webPageSchema = createWebPageSchema(
    parsedTitle,
    parsedDescription,
    Astro.url,
);
---

<!doctype html>
<html lang="en" class="dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="generator" content={Astro.generator} />
        <meta name="author" content="Seren_Modz 21" />
        <meta
            name="keywords"
            content="Kings World, Discord Bots, Server Management, Discord Moderation, Server Automation, Leveling Bot, Discord Utility, Twitch Notifications, Discord Community, Server Tools, Discord Starboard, Server Administration, Discord Automation"
        />

        <meta name="msapplication-TileColor" content="#131830" />
        <meta name="msapplication-starturl" content="/" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="mobile-web-app-capable" content="yes" />
        <meta name="theme-color" content="#131830" />

        <link
            rel="apple-touch-icon"
            type="image/png"
            sizes="180x180"
            href="/apple-touch-icon.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon-16x16.png"
        />
        <link
            rel="shortcut icon"
            type="image/x-icon"
            sizes="32x32"
            href="/favicon.ico"
        />
        <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#131830" />

        <meta
            name="google-site-verification"
            content="q7ajPP8pu2rH2J69LpM6pTsoWQPJq8hbzcEDCS1oNs4"
        />
        <meta property="fb:app_id" content="543459586677935" />

        <meta name="robots" content="index,follow" />
        <meta name="googlebot" content="index,follow" />

        <title>{parsedTitle}</title>
        <meta name="description" content={parsedDescription} />
        <link rel="canonical" href={Astro.url} />
        <link rel="sitemap" href="/sitemap-index.xml" />

        <meta property="og:type" content="website" />
        <meta property="og:site_name" content={siteConfig.name} />
        <meta property="og:title" content={title ?? siteConfig.title} />
        <meta property="og:description" content={parsedDescription} />
        <meta property="og:url" content={Astro.url} />
        <meta property="og:image" content={logoURL} />
        <meta property="og:image:type" content="image/png" />
        <meta property="og:image:width" content="512" />
        <meta property="og:image:height" content="512" />
        <meta
            property="og:image:alt"
            content="Kings World logo - Discord bots and server management tools"
        />
        <meta property="og:locale" content="en" />

        <meta name="twitter:card" content="summary" />
        <meta name="twitter:site" content="@SerenModz21" />
        <meta name="twitter:creator" content="@SerenModz21" />

        <script
            type="application/ld+json"
            set:html={JSON.stringify(organizationSchema)}
            is:inline
        />
        <script
            type="application/ld+json"
            set:html={JSON.stringify(webPageSchema)}
            is:inline
        />

        {
            schemas?.map((schema) => (
                <script
                    type="application/ld+json"
                    set:html={JSON.stringify(schema)}
                    is:inline
                />
            ))
        }

        <ClientRouter />
    </head>
    <body class="grid min-h-svh grid-rows-[auto_1fr_auto] antialiased">
        <slot />
    </body>
</html>
